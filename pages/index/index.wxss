.container {
  position: absoloute;
  width: 100%;
  height: 1334rpx;
}
.top-bar {
  width: 100%;
  height: 60rpx;
  background: rgb(52, 162, 228);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.type-item {
  flex-basis: 100%;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #fff;
}

.active {
  position: relative;
}

.active::after {
  position: absolute;
  content: '';
  width: 30rpx;
  height: 5rpx;
  background: #fff;
  bottom: -5rpx;
  left: 40rpx;
}
.news-container {
  width: 100%;
  height: 1074rpx;
  position: absolute;
  margin-top: 60rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.top-news {
  width: 100%;
  height: 400rpx;
}

.top-image {
  position: relative;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.top-mask {
  position: relative;
  margin-top: -128rpx;
  width: 100%;
  height: 30%;
  background: linear-gradient(rgba(179, 178, 178, 0.7), #000);
  z-index: 1;
  display: flex;
  flex-direction: column;
}
.top-title {
  width: 90%;
  flex-basis: 70%;
  margin: 0 auto;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #fff;
}
.top-time {
  width: 90%;
  margin: 0 auto;
  text-align: left;
  flex-basis: 30%;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #fff;
}

.other-news {
  width: 90%;
  margin: 0 auto;
  height: 200rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.other-content {
  flex-basis: 70%;
  padding-right: 20rpx;
  font-size: 27rpx;
  line-height: 38rpx;
}
.other-thumbnail {
  flex-basis: 30%;
  height: 100%;
}
.thumbnail {
  width: 100%;
  height: 100%;
}

.other-footer {
  font-size: 20rpx;
  line-height: 25rpx;
  color: #999;
  margin-top: 20rpx;
}
.other-mask {
  width: 100%;
  height: 200rpx;
  position: absolute;
  z-index: 100;
  background: transparent;
}